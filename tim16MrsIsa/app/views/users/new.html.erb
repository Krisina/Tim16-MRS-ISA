<div class="register-form">
	<div class="form">
		<h1 align="left">Registracija</h1>
		<%= form_for(@user) do |f| %>
			<%= f.label :'E-Mail:' %>
			<%= f.text_field :email, :placeholder => "e-mail"%>
			<%= f.label :'Lozinka:' %>
			<%= f.password_field :password, :placeholder => "password"%>
			<%= f.label :'Ponovi Lozinku:' %>
			<%= f.password_field :password_confirmation, :placeholder => "password confirmation"%>
			<%= f.label :'Ime:' %>
			<%= f.text_field :ime, :placeholder => "ime"%>
			<%= f.label :'Prezime:' %>
			<%= f.text_field :prezime, :placeholder => "prezime"%>
			<%= f.label :'Adresa:' %>
			<%= f.text_field :adresa, :placeholder => "adresa"%>
			<%= f.submit :"Sign Up" %>
			<p class="message">Vec ste se registrovali? <%= link_to :"Login" , :login, class: "nav_links"%></p>
		<% end %>
		<% if @user.errors.any? %>
			<div class="alert-box error"><span>error: </span>
				<i class="fa fa-times-circle"></i>
				<% for message_error in @user.errors.full_messages %>
					<li><%= image_tag("error.png") %><%= message_error %></li>
				<% end %>
			</div>
		<% end %>
		
	</div>
</div>