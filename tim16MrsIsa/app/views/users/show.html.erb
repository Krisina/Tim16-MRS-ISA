        <td class="td1"><%= foodndrink.drink %></td>
        <td class="tdeditfd"><%= link_to 'Otkazi', foodndrink, method: :delete, data: { confirm: 'Are you sure?' } %></td>		
		
      </tr>  
    <% end %>

  </tbody>


</table>

