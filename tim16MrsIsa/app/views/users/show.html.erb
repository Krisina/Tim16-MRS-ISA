<p class="comeon">Rezervacija</p>
<table class="flat-tabler sortable">
  
  <thead>
    <tr>
	  <th class="th1">Naziv restorana</th>
      <th class="th1">Datum</th>
      <th class="th1">Vreme</th>
      <th class="th1">Trajanje</th>
      <th class="th1">Sto</th>
	  
    </tr>
  </thead>

  <tbody>
    <% for reservation in @user.reservations %>
      <tr>
		<td class="td1"><%= reservation.ResName %></td>
        <td class="td1"><%= reservation.date %></td>
        <td class="td1"><%= reservation.time %></td>
        <td class="td1"><%= reservation.duration %></td>
        <td class="td1"><%= reservation.table %></td>
		<td class="tdeditrez"><%= link_to 'Prikaz', reservation %></td>
        <td class="tdeditrez"><%= link_to 'Otkazi', reservation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
		<td class="tdeditrez"><%= link_to :"Rezervisi hranu i pice" , new_foodndrink_path(@current_user)%></td>	
		
      </tr>  
    <% end %>

  </tbody>
  <tfoot>
	<tr><td class="tdfoot"><%= link_to 'Dodaj novu rezervaciju', new_reservation_path %></td></tr>
  </tfoot>
</table>

<p class="comeon">Rezervisana Hrana i Pice</p>
<table class="flat-tablefd sortable">
  
  <thead>
