<style>
	table.table3{
		border: 1px solid black;
		border-collapse: separate;
		border-spacing: 5px 5px;
	}
	tr:nth-child(even) {background-color: #f2f2f2}
	
	th.th2 {
		background-color: #bdbdbd;
	}
	
</style>
 
<table class="table3">
  <tr>
    <th class="th2">E-mail</th>
  </tr>
 
  <% @user.each do |users| %>
    <tr>
      <td><%= users.email %></td>
    </tr>
  <% end %>
</table>