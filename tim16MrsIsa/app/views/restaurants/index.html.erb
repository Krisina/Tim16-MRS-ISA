<style>
	table.table2{
		border: 1px solid black;
		border-collapse: separate;
		border-spacing: 5px 5px;
		
	}
	tr.tr1:nth-child(even) {background-color: #f2f2f2}
	
	th.th1 {
		background-color: #bdbdbd;
		
	}
</style>
 
<table class="table2">
  <tr class="tr1">
    <th class="th1">Ime Restorana  </th>
	<th class="th1">Udaljenist  </th>
	<th class="th1">Rejting  </th>
	<th class="th1">Prijatelji  </th>
	<th class="th1">Rezervacija  </th>
  </tr>
 
  <% @restaurant.each do |restaurants| %>
    <tr class="tr1">
      <td><%= restaurants.name %></td>
	  <td><%= restaurants.distance %></td>
	  <td><%= restaurants.rating %></td>
	  <td><%= restaurants.friends %></td>
	  <td><%= restaurants.reservation %></td>
    </tr>
  <% end %>
</table>